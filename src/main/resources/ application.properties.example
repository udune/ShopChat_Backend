# ========================================
# FeedShop Backend Application Properties
# ========================================

# 애플리케이션 기본 설정
spring.application.name=${SPRING_APPLICATION_NAME:feedshop-spring-service}
server.port=${SERVER_PORT:8080}

# ========================================
# 데이터베이스 설정
# ========================================

# MySQL 데이터베이스 연결 설정
spring.datasource.url=jdbc:mysql://${DB_HOST:localhost}:${DB_PORT:3306}/${DB_NAME:feedshop_db}?allowPublicKeyRetrieval=true&useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
spring.datasource.username=${DB_USERNAME:root}
spring.datasource.password=${DB_PASSWORD}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA/Hibernate 설정
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# HikariCP 커넥션 풀 설정
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.minimum-idle=2
spring.datasource.hikari.connection-timeout=30000
spring.datasource.hikari.idle-timeout=600000
spring.datasource.hikari.max-lifetime=1800000

# ========================================
# 보안 설정
# ========================================

# JWT 설정
jwt.secret=${JWT_SECRET:your-jwt-secret-key-here}
jwt.expiration=${JWT_EXPIRATION:86400000}

# ========================================
# 파일 업로드 설정
# ========================================

# 멀티파트 설정
spring.servlet.multipart.enabled=true
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB
spring.servlet.multipart.file-size-threshold=2KB

# 파일 업로드 경로
file.upload.base-path=./uploads
file.upload.cache-period=3600

# ========================================
# 외부 서비스 설정
# ========================================

# Mailgun 이메일 서비스
mailgun.api.key=${MAILGUN_API_KEY}
mailgun.domain=${MAILGUN_DOMAIN}
mailgun.from.email=${MAILGUN_EMAIL}

# Google reCAPTCHA
recaptcha.secret-key=${RECAPTCHA_SECRET_KEY}
recaptcha.score-threshold=0.5

# Google Cloud Storage (선택사항)
spring.cloud.gcp.project-id=${GCS_PROJECT_ID}
spring.cloud.gcp.storage.bucket=${GCS_BUCKET:feedshop-uploads}
spring.cloud.gcp.storage.auto-create-buckets=true

# ========================================
# 애플리케이션 URL 설정
# ========================================

# 이메일 인증 URL
app.verification-url=${APP_VERIFICATION_URL:http://localhost:3000/verify-email?token=}
app.password-reset-url=${APP_PASSWORD_RESET_URL:http://localhost:3000/reset-password}

# ========================================
# 로깅 설정
# ========================================

# 로깅 레벨
logging.level.root=INFO
logging.level.com.cMall.feedShop=INFO
logging.level.org.springframework.security=INFO

# 로그 파일 설정 (운영 환경)
logging.file.name=logs/feedshop.log
logging.file.max-size=100MB
logging.file.max-history=30

# 콘솔 로그 패턴
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n

# ========================================
# Spring Boot Actuator 설정
# ========================================

# Actuator 엔드포인트 노출
management.endpoints.web.exposure.include=health,info,metrics
management.endpoint.health.show-details=always

# ========================================
# 시간대 설정
# ========================================

spring.jackson.time-zone=Asia/Seoul
spring.jpa.properties.hibernate.jdbc.time_zone=Asia/Seoul

# ========================================
# 개발 환경 전용 설정 (운영에서는 제거)
# ========================================

# Spring DevTools (개발 환경에서만)
# spring.devtools.restart.enabled=true

# SQL 로깅 (개발 환경에서만)
# logging.level.org.hibernate.SQL=DEBUG
# logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE

# ========================================
# 환경별 프로파일 설정
# ========================================

# 기본 프로파일 (개발 환경)
